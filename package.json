{
  "name": "qrty",
  "version": "2.0.0",
  "description": "QR code decoder using screen capture or file upload",
  "scripts": {
    "start": "pnpm run build && node scripts/dev-server.js",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,html,css}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css}\" \"scripts/**/*.js\"",
    "typecheck": "tsc --noEmit",
    "build:renderer": "tsc -p tsconfig.renderer.json && cp -R build/renderer/* src/ && rm -rf build/renderer",
    "build:prepare": "rm -rf dist && mkdir -p dist && cp src/index.html src/styles.css src/sitemap.xml src/.nojekyll dist/ 2>/dev/null || true",
    "generate:icons": "node scripts/generate-icons.js",
    "generate:og-image": "node scripts/generate-og-image.js",
    "generate:qr-code": "node scripts/generate-qr-code.js",
    "generate:all": "pnpm run generate:icons && pnpm run generate:og-image && pnpm run generate:qr-code",
    "build": "pnpm run build:prepare && pnpm run build:renderer && pnpm run generate:all"
  },
  "keywords": [
    "qr",
    "qr-code",
    "decoder",
    "scanner"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@napi-rs/canvas": "^0.1.88",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.9",
    "@zxing/library": "^0.21.3",
    "eslint": "^8.57.1",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsbarcode": "^3.12.3",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "qrcode": "^1.5.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "jsqr": "^1.4.0"
  }
}
